    "recipeName": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "diet": {
      "type": "string"
    },
    "recipeType": {
      "type": "string",
      "enum": [
        "Breakfast",
        "Lunch",
        "Dinner",
        "Dessert",
        "Snack"
      ]
    },
    "cookingTime": {
      "type": "integer"
    },
    "difficulty": {
      "type": "string",
      "enum": [
